{
  "permissions": {
    "allow": [
      "Read(//workshop/claude-code-aws-blog/checkpoints/**)",
      "Bash(chmod:*)",
      "Bash(./restore-checkpoint.sh:*)",
      "Bash(./create-checkpoint.sh:*)",
      "Bash(npm install)",
      "Bash(npm run dev)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(echo:*)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_take_screenshot",
      "Bash(lsof:*)",
      "Bash(netstat:*)",
      "Bash(ss:*)",
      "Bash(xargs kill:*)",
      "Bash(npx prettier --write test-formatting.md)",
      "Bash(npx prettier:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'file_path=$(echo \"$INPUT_JSON\" | jq -r \".tool_input.file_path\"); if [[ \"$file_path\" =~ \\.(md|mdx)$ ]]; then npx prettier --write \"$file_path\" && echo \"âœ“ Formatted markdown: $file_path\"; fi'"
          }
        ]
      }
    ]
  }
}
